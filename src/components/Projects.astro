---
import GitHub from "./icons/GitHub.astro";
import NextJS from "./icons/NextJS.astro";
import Tailwind from "./icons/Tailwind.astro";
import Link from "./icons/Link.astro";
import LinkButton from "./LinkButton.astro";
import Laravel from "./icons/Laravel.astro";
import ReactJs from "./icons/ReactJs.astro";

const TAGS = {
    REACT: {
        name: "React.js",
        class: "bg-blue-400 fill-white",
        icon: ReactJs,
    },
    TAILWIND: {
        name: "Tailwind CSS",
        class: "bg-[#003159] text-white",
        icon: Tailwind,
    },
    LARAVEL: {
        name: "Laravel",
        class: "bg-red-500 fill-white",
        icon: Laravel,
    },
};
const PROJECTS = [
    {
        title: "MyTicket - Sitio web de compra de boletos para eventos",
        description: "Sitio web para la compra y venta de boletos para cualquier tipo de evento",
        github: "https://github.com/abel291/ticket-booking-laravel-react",
        image: "/projects/myticket.png",
        tags: [TAGS.REACT, TAGS.LARAVEL, TAGS.TAILWIND],
    },
    {
        title: "Hotel - Sistema de reserva de habitaciones de hotel",
        description: "Sitio web destinado a hoteles con sistema de reserva de habitaciones",
        github: "https://github.com/abel291/hotel-laravel-inertia-react",
        image: "/projects/hotel.png",
        tags: [TAGS.REACT, TAGS.LARAVEL, TAGS.TAILWIND],
    },
    {
        title: "Restaurant - Website con sistema de pedidos",
        description: "Ecommerce para un Restaurante de comida rapida ,cuenta con un sistema de pedidos a domicilio como tambien el clasico carrito de compra",
        github: "https://github.com/abel291/restaurant-laravel-inertia-react",
        image: "/projects/restaurant.png",
        tags: [TAGS.REACT, TAGS.LARAVEL, TAGS.TAILWIND],
    },
    {
        title: "Heladeria - pequeño ecommerce de venta de helado",
        description: "Sitio web para la venta de helados construida en React, Laravel, tailwind e inertiaJs",
        github: "https://github.com/abel291/ice-cream-shop-laravel-inertia-react",
        image: "/projects/heladeria.png",
        tags: [TAGS.REACT, TAGS.LARAVEL, TAGS.TAILWIND],
    },
    {
        title: "EcommerceClothes - Tienda el linea de venta de ropa",
        description: "Tienda el linea de venta de ropa , construida en React y Laravel",
        github: "https://github.com/abel291/ecommerce-react-vite-laravel",
        image: "/projects/clothes.png",
        tags: [TAGS.REACT, TAGS.LARAVEL, TAGS.TAILWIND],
    },
    {
        title: "EcommerceHardware - Tienda el linea de venta de hardware",
        description: "Tienda el linea de venta de hardware , construida en React y Laravel con InertiaJs",
        github: "https://github.com/abel291/ecommerce-hardware-laravel-inertia-react",
        image: "/projects/hardware.png",
        tags: [TAGS.REACT, TAGS.LARAVEL, TAGS.TAILWIND],
    },
    {
        title: "Poke api, Pokemon",
        description: "Pequeño proyecto donde probamos la api de pokemones con react y tailwindCSS",
        github: "https://github.com/abel291/poke-api-react-vite-tailwind",
        link: "https://poke-api-react-vite-tailwind.vercel.app",
        image: "/projects/pokemon.png",
        tags: [TAGS.REACT, TAGS.TAILWIND],
    },
];
---

<div class="flex flex-col gap-y-16">
    {
        PROJECTS.map(({image, title, description, tags, link, github}) => (
            <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
                <div class="w-full md:w-1/2">
                    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
                        <img
                            alt="Proyects"
                            class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
                            loading="lazy"
                            src={image}
                        />
                    </div>
                </div>

                <div class="w-full md:w-1/2 md:max-w-lg">
                    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">{title}</h3>
                    <div class="flex flex-wrap mt-2">
                        <ul class="flex flex-row mb-2 gap-x-2">
                            {tags.map((tag) => (
                                <li>
                                    <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}>
                                        <tag.icon class="size-4" />
                                        {tag.name}
                                    </span>
                                </li>
                            ))}
                        </ul>

                        <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
                        <footer class="flex items-end justify-start mt-4 gap-x-4">
                            {github && (
                                <LinkButton href={github}>
                                    <GitHub class="size-6" />
                                    Code
                                </LinkButton>
                            )}
                            {link && (
                                <LinkButton href={link}>
                                    <Link class="size-4" />
                                    Preview
                                </LinkButton>
                            )}
                        </footer>
                    </div>
                </div>
            </article>
        ))
    }
</div>
